# backend/Dockerfile
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy only package.json for dependency installation
COPY package.json ./

# Install dependencies
RUN npm install --production

# Copy the rest of the application
COPY index.js ./

# Expose backend port
EXPOSE 3000

# Start backend using environment variables from .env
CMD ["node", "index.js"]
